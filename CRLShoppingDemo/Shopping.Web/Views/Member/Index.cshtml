@{
    ViewBag.Title = "会员中心";
}

<h2>@ViewBag.Title</h2>


<form class="form-horizontal" method="post" action="/member/charge">
    <div class="control-group">
        <label class="control-label" for="inputEmail">现金</label>
        <div class="controls">
            @ViewBag.account1
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="inputPassword">积分</label>
        <div class="controls">
            @ViewBag.account2
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="inputPassword">充值金额</label>
        <div class="controls">
            @Html.TextBox("amount",1000)
        </div>
    </div>
        <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn">确定</button>
        </div>
    </div>
</form>